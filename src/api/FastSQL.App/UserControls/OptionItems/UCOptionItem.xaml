<UserControl x:Class="FastSQL.App.UserControls.UCOptionItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FastSQL.App.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Name="grdContainer">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" Name="DisplayName"/>
            <RowDefinition Height="*" Name="Description"/>
            <RowDefinition Height="*" Name="Value"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding DisplayName}" Padding="2"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding Description}" FontSize="11" Opacity=".7" Foreground="Gray" Padding="2"/>
    </Grid>
</UserControl>
